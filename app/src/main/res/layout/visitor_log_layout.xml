<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mLayoutItem"
    android:background="#ffffff"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/mImgPhoto"
        android:src="@drawable/ic_distributor"
        android:layout_width="70dp"
        android:layout_height="70dp"/>
    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/mImgPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/mImgCall"
            android:layout_margin="2dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_phone_call"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/mImglog"
            android:layout_below="@id/mImgCall"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_baseline_directions_bus_24"
            android:layout_width="25dp"
            android:visibility="gone"
            android:layout_height="25dp"/>

        <TextView
            android:id="@+id/mTextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mehta Distributors"
            android:textColor="@color/apppink"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="1dp"
            android:id="@+id/mTextDate"
            android:layout_below="@+id/mTextTitle"
            android:textColor="#666666"
            android:text=""
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

</RelativeLayout>