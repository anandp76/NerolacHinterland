<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mLayoutItem"
    android:background="#ffffff"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/mImgPhoto"
        android:src="@drawable/img_dummy"
        android:layout_width="70dp"
        android:layout_height="70dp"/>
    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/mImgPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/mImgSelect"
            android:layout_margin="2dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_ok_off"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/mTextTitle"
            android:textStyle="bold"
            android:textColor="@color/apppink"
            android:text=""
            android:maxLines="2"
            android:textSize="15dp"
android:layout_toLeftOf="@+id/mImgSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_marginTop="1dp"
            android:id="@+id/msku"
            android:layout_below="@+id/mTextTitle"
            android:textColor="@color/appblue"
            android:text=""
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_marginTop="1dp"
            android:id="@+id/packsize"
            android:layout_below="@+id/msku"
            android:textColor="@color/appblue"
            android:text=""
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
      

    </RelativeLayout>


</RelativeLayout>