<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mLayoutItem"
    android:background="#ffffff"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:id="@+id/mTextTitle"
        android:textStyle="bold"
        android:textColor="@color/apppink"
        android:text="Choithram"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/mImgUpload"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_upload_new"
        android:layout_width="25dp"
        android:layout_height="25dp"/>

    <ImageView
       android:layout_toLeftOf="@+id/mImgUpload"
        android:id="@+id/mImgDelete"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_delete"
        android:layout_width="27dp"
        android:layout_height="27dp"/>



</RelativeLayout>