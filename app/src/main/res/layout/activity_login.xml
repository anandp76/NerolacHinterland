<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/ic_nero_login_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/mImgLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_nero_home_logo"/>

    <ImageView
        android:id="@+id/mImgLogo2"
        android:layout_below="@+id/mImgLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_nero_net"/>
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:layout_below="@+id/mImgLogo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:padding="10dp"
            android:background="@color/white"
            android:textColor="@color/appblue"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColorHint="@color/appblue"
            android:hint="E-mail/Mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/appblue"/>

        <EditText
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:background="@color/white"
            android:textColor="@color/appblue"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColorHint="@color/appblue"
            android:hint="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/appblue"/>


        <RelativeLayout
            android:id="@+id/mLayoutLogin"
            android:layout_marginTop="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:background="@color/appblue">
            <TextView
                android:layout_centerInParent="true"
                android:text="LOGIN"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </LinearLayout>



</RelativeLayout>