<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mLayoutItem"
    android:background="#ffffff"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/mImgPhoto"
        android:src="@drawable/ic_distributor"
        android:layout_width="70dp"
        android:layout_height="70dp"/>
    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/mImgPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/mImgCall"
            android:layout_margin="2dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_phone_call"
            android:layout_width="25dp"
            android:layout_height="25dp"/>

        <ImageView
            android:id="@+id/mImglog"

            android:layout_below="@id/mImgCall"
            android:layout_alignParentRight="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="6dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_baseline_directions_bus_24" />
        <ImageView
            android:id="@+id/mImgpaint"

            android:layout_below="@id/mImglog"
            android:layout_alignParentRight="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="6dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_baseline_format_paint" />

        <TextView
            android:id="@+id/mTextTitle"
            android:textStyle="bold"
            android:textColor="@color/apppink"
            android:text="Mehta Distributors"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="1dp"
            android:id="@+id/mTextOwnerName"
            android:layout_below="@+id/mTextTitle"
            android:textColor="#666666"
            android:text="Akhilesh Pathak"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="1dp"
            android:id="@+id/mTextAddresss"
            android:layout_below="@+id/mTextOwnerName"
            android:textColor="#666666"
            android:text="Akhilesh Pathak"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="1dp"
            android:id="@+id/mtextlastorder"
            android:layout_below="@+id/mTextAddresss"
            android:textColor="#666666"
            android:text="Akhilesh Pathak"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>