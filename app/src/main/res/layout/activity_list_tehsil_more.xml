<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fafafa"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/mLayoutTop"
        android:background="@color/appblue"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/mImgLogo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_nero_white_logo"/>

        <ImageView
            android:id="@+id/mImgMenu"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_menu_white"/>

        <ImageView
            android:visibility="gone"
            android:layout_toLeftOf="@+id/mImgMenu"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_search_white"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/mImgLogo"
            android:layout_centerHorizontal="true"
            android:text="Angan Wadi"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/mLayoutTop"
        android:id="@+id/mLayoutTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/mSpinerView"
            android:background="@drawable/border_rectangle_shap"
            android:layout_width="250dp"
            android:layout_height="wrap_content">
            <Spinner
                android:paddingBottom="10dp"
                android:background="#00000000"
                android:paddingTop="10dp"
                android:id="@+id/mSpinnerDistrict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_keyboard_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <ImageView
            android:layout_marginTop="-20dp"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_circle_brawoun"
            android:layout_width="100dp"
            android:layout_height="65dp"/>

    </RelativeLayout>



    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/mLayoutTitle"
        android:id="@+id/mLayoutItem"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:padding="10dp"
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:textColor="@color/appblue"
                android:textSize="13dp"
                android:layout_centerInParent="true"
                android:text="Tehsils"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:textColor="@color/appblue"
                android:textSize="13dp"
                android:layout_centerInParent="true"
                android:text="Distributors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:textColor="@color/appblue"
                android:textSize="13dp"
                android:layout_centerInParent="true"
                android:text="Retailers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:textColor="@color/appblue"
                android:textSize="13dp"
                android:layout_centerInParent="true"
                android:text="Villages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>




    </LinearLayout>
<ListView
    android:layout_below="@+id/mLayoutItem"
    android:id="@+id/mListView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>




</RelativeLayout>