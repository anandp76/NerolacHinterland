<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mLayoutItem"
    android:background="#ffffff"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/mImgPhoto"
        android:src="@drawable/ic_haatmarket"
        android:layout_width="70dp"
        android:layout_height="70dp"/>
    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/mImgPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_location_o"
            android:layout_width="25dp"
            android:layout_height="25dp"/>

        <TextView
            android:id="@+id/mTextTitle"
            android:textStyle="bold"
            android:textColor="@color/apppink"
            android:text="Chithram"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/mTextAddresss"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/mTextTitle"
            android:textColor="#000000"
            android:text="Indore, Madhya Pradesh 452010"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_below="@+id/mTextAddresss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1.4"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <com.nerolac.Utils.FontAwesome
                    android:textColor="@color/apppink"
                    android:layout_gravity="center_vertical"
                    android:textSize="20dp"
                    android:text="&#xf783;"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="8dp"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical"
                    android:textSize="14dp"
                    android:text="Sunday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="2.6"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <com.nerolac.Utils.FontAwesome
                    android:textColor="@color/apppink"
                    android:layout_gravity="center_vertical"
                    android:textSize="20dp"
                    android:text="&#xf291;"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="8dp"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical"
                    android:textSize="14dp"
                    android:text="150"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>