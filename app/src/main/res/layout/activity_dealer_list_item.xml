<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mLayoutItem"
    android:background="#ffffff"
    android:paddingTop="8dp"
    android:paddingRight="8dp"
    android:paddingLeft="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/mImgPhoto"
        android:src="@drawable/ic_distributor"
        android:layout_width="60dp"
        android:layout_height="60dp"/>
    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/mImgPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/mImgCall"
            android:layout_margin="2dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_phone_call"
            android:layout_width="25dp"
            android:layout_height="25dp"/>

        <TextView
            android:id="@+id/mTextTitle"
            android:textStyle="bold"
            android:textColor="@color/apppink"
            android:text="Mehta Dealer"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="1dp"
            android:id="@+id/mTextOwnerName"
            android:layout_below="@+id/mTextTitle"
            android:textColor="#666666"
            android:text="Anil Mehta"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>






        <TextView
            android:textAllCaps="false"
            android:layout_marginTop="1dp"
            android:id="@+id/mTextAddresss"
            android:layout_below="@+id/mTextOwnerName"
            android:textColor="#666666"
            android:text="BAZARGATE (SUB OFFICE), MUMBAI"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

       <View
        android:id="@+id/mDivider"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/mImgPhoto"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#666666"/>

    <LinearLayout
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:id="@+id/mOprationView"
        android:background="#666666"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_below="@+id/mDivider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/mLayoutUpdateInfo"
            android:layout_marginRight="1dp"
            android:background="@color/white"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_update_info"
                android:textSize="15dp"
                android:textColor="#666666"
                android:text="Update Info"
                android:padding="5dp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/mLayoutOrder"
            android:layout_marginLeft="1dp"
            android:background="@color/white"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_purchase_order"
                android:textSize="15dp"
                android:textColor="#666666"
                android:text="Order"
                android:padding="5dp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_below="@+id/mOprationView"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#666666"/>

</RelativeLayout>