<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mLayoutItem"
    android:background="#ffffff"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/mImgPhoto"
        android:src="@drawable/ic_distributor"
        android:layout_width="65dp"
        android:layout_height="65dp"/>
    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/mImgPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_chevron_right_black"
            android:layout_width="35dp"
            android:layout_height="35dp"/>

        <TextView
            android:id="@+id/mTextTitle"
            android:textStyle="bold"
            android:textColor="@color/appblue"
            android:text="Mehta Distributors"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/mTextAddresss"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/mTextTitle"
            android:textColor="#000000"
            android:text="Indore, Madhya Pradesh 452010"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_below="@+id/mTextAddresss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1.1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <com.nerolac.Utils.FontAwesome
                    android:textColor="@color/apppink"
                    android:layout_gravity="center_vertical"
                    android:textSize="18dp"
                    android:text="&#xf073;"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textStyle="bold"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/appblue"
                    android:layout_gravity="center_vertical"
                    android:textSize="13dp"
                    android:text="Date : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/appblue"
                    android:layout_gravity="center_vertical"
                    android:textSize="13dp"
                    android:text="22-10-2020"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="0.9"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <com.nerolac.Utils.FontAwesome
                    android:textColor="@color/apppink"
                    android:layout_gravity="center_vertical"
                    android:textSize="18dp"
                    android:text="&#xf156;"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textStyle="bold"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/appblue"
                    android:layout_gravity="center_vertical"
                    android:textSize="13dp"
                    android:text="Value : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/appblue"
                    android:layout_gravity="center_vertical"
                    android:textSize="13dp"
                    android:text="28,00.00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>