<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fafafa"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/mLayoutTop"
        android:background="@drawable/ic_swipe_list_bg"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:layout_alignParentLeft="true"
            android:id="@+id/mImgLogo"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_nerolac_logo"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/mImgBack"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_arrow_back"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/mImgLogo"
            android:layout_centerHorizontal="true"
            android:text="Dashboard"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <ScrollView
        android:layout_below="@+id/mLayoutTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="Village Coverage"
                android:textSize="20dp"
                android:textColor="@color/appblue"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.github.mikephil.charting.charts.PieChart
                android:layout_margin="10dp"
                android:id="@+id/chartVillage"
                android:layout_width="match_parent"
                android:layout_height="350dp" />

            <TextView
                android:id="@+id/mTxtViewMore1"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"
                android:text="@string/string_here"
                android:textSize="15dp"
                android:drawableRight="@drawable/ic_chevron_right"
                android:textColor="@color/appblue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="District Coverage"
                android:textSize="20dp"
                android:textColor="@color/appblue"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.github.mikephil.charting.charts.BarChart
                android:layout_margin="10dp"
                android:id="@+id/chart1"
                android:layout_width="match_parent"
                android:layout_height="450dp"/>
            <TextView
                android:id="@+id/mTxtViewMore2"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"
                android:text="@string/string_here"
                android:textSize="15dp"
                android:drawableRight="@drawable/ic_chevron_right"
                android:textColor="@color/appblue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="Distributor Classification"
                android:textSize="20dp"
                android:textColor="@color/appblue"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.github.mikephil.charting.charts.PieChart
                android:layout_margin="10dp"
                android:layout_below="@+id/mLayoutTop"
                android:id="@+id/chartDistributors"
                android:layout_width="match_parent"
                android:layout_height="350dp" />
            <TextView
                android:id="@+id/mTxtViewMore3"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"
                android:text="@string/string_here"
                android:textSize="15dp"
                android:drawableRight="@drawable/ic_chevron_right"
                android:textColor="@color/appblue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="Paint Contribution"
                android:textSize="20dp"
                android:textColor="@color/appblue"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.github.mikephil.charting.charts.BarChart
                android:layout_margin="10dp"
                android:id="@+id/chart2"
                android:layout_width="match_parent"
                android:layout_height="450dp"/>
            <TextView
                android:id="@+id/mTxtViewMore4"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"
                android:text="@string/string_here"
                android:textSize="15dp"
                android:drawableRight="@drawable/ic_chevron_right"
                android:textColor="@color/appblue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="Outlet Turnover"
                android:textSize="20dp"
                android:textColor="@color/appblue"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.github.mikephil.charting.charts.BarChart
                android:layout_margin="10dp"
                android:id="@+id/chart3"
                android:layout_width="match_parent"
                android:layout_height="450dp"/>
            <TextView
                android:id="@+id/mTxtViewMore5"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"
                android:text="@string/string_here"
                android:textSize="15dp"
                android:drawableRight="@drawable/ic_chevron_right"
                android:textColor="@color/appblue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>






        </LinearLayout>

    </ScrollView>




</RelativeLayout>